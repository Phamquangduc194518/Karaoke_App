<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="ViewModelMusic"
            type="com.duc.karaoke_app.feature_player.presentation.viewmodel.MusicPlayerViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@drawable/gradient_music_background">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.02" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.92" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.06" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.94" />

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:onClick="@{()->ViewModelMusic.onBackPressed()}"
                android:scaleType="centerCrop"
                android:src="@drawable/previous"
                app:tint="@color/white"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintTop_toTopOf="@id/guideline_top"/>

            <TextView
                android:id="@+id/now_playing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Now Playing"
                android:textColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="@id/guideline_top"
                app:layout_constraintStart_toEndOf="@id/back_button"
                app:layout_constraintEnd_toStartOf="@id/options_button"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/options_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Options"
                android:scaleType="centerCrop"
                android:src="@drawable/options"
                app:tint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintTop_toTopOf="@id/guideline_top"/>

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@{ViewModelMusic.song.subTitle}"
                android:textColor="#CCCCCC"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/now_playing_title"
                app:layout_constraintStart_toStartOf="@+id/guideline_start"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"/>

            <ScrollView
                android:id="@+id/album_cover"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scrollbars="none"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/subtitle"
                app:layout_constraintBottom_toTopOf="@id/ll_navigation"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingExtra="10dp"
                    android:scrollbars="vertical"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    app:htmlText="@{ViewModelMusic.song.lyrics}" />
            </ScrollView>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_navigation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="5"
                android:layout_marginTop="26dp"
                app:layout_constraintTop_toBottomOf="@id/album_cover"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end"
                app:layout_constraintBottom_toTopOf="@+id/control_buttons">

                <ImageButton
                    android:id="@+id/share_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Share"
                    android:scaleType="centerCrop"
                    android:src="@drawable/camera"
                    app:tint="#FFFFFF" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/song_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/album_cover"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="@{ViewModelMusic.song.title}"
                        android:textColor="#87CEEB"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/artist_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/song_title"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@{ViewModelMusic.song.subTitle}"
                        android:textColor="#87CEEB"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/heart_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Like"
                    android:scaleType="centerCrop"
                    android:src="@drawable/heart"
                    app:tint="#FFFFFF" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:id="@+id/control_buttons"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_navigation"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/ll_navigation"
                app:layout_constraintBottom_toBottomOf="@id/guideline_bottom"
                app:layout_constraintStart_toStartOf="@id/guideline_start"
                app:layout_constraintEnd_toEndOf="@id/guideline_end">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/recording_by_camera"
                    android:backgroundTint="@color/white" />

                <ImageButton
                    android:id="@+id/play_pause_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:onClick="@{()->ViewModelMusic.togglePlayPause(ViewModelMusic.song.audioUrl)}"
                    android:scaleType="centerCrop"
                    android:src="@{ViewModelMusic.isPlaying() ? @drawable/play_action : @drawable/play}"
                    app:tintColor="@{ViewModelMusic.isPlaying}" />

                <TextView
                    android:id="@+id/tv_recording"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/recording"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/tv_done"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/done"
                    android:backgroundTint="@color/white" />

            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
