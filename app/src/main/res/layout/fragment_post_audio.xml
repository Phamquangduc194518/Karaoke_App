<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="PostAudioViewModel"
            type="com.duc.karaoke_app.feature_player.presentation.viewmodel.MusicPlayerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background">

        <FrameLayout
            android:id="@+id/loadingOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCFFFFFF"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieUpload"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:lottie_autoPlay="false"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/loading_record_animation" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Back"
                android:src="@drawable/baseline_arrow_back"
                app:tint="#212121" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Create Post"
                android:textColor="#212121"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="24dp"
                android:layout_height="24dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/topBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <EditText
                    android:id="@+id/etContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_edit_text_login"
                    android:gravity="top|start"
                    android:hint="What's on your mind?"
                    android:inputType="textMultiLine"
                    android:maxLength="140"
                    android:minHeight="100dp"
                    android:padding="16dp"
                    android:text="@={PostAudioViewModel.titlePost}"
                    android:textColor="#212121"
                    android:textColorHint="#9E9E9E"
                    android:textSize="16sp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/ivCover"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                        <ImageView
                            android:id="@+id/iv_image_post"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/mau_poster_ca_nhac_3"/>

                        <ImageView
                            android:id="@+id/ivCover2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop"
                            android:src="@drawable/camera" />
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvAutoShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Auto share to"
                    android:textColor="#212121"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvShareDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="When you upload a video, we prepare your video for sharing and open the platform you choose."
                    android:textColor="#757575"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/llShareIcons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivFacebook"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#1877F2"
                        android:padding="12dp"
                        android:src="@drawable/logo_facebook"
                        app:tint="#FFFFFF" />

                    <ImageView
                        android:id="@+id/ivEmail"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#F0F2F5"
                        android:padding="14dp"
                        android:src="@drawable/logo_email"
                        app:tint="#424242" />

                    <ImageView
                        android:id="@+id/ivMessage"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginHorizontal="12dp"
                        android:background="@drawable/circle_background"
                        android:backgroundTint="#0084FF"
                        android:padding="12dp"
                        android:src="@drawable/logo_messenger"
                        app:tint="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_700"
                android:stateListAnimator="@null"
                android:textColor="#FFFFFF"
                android:text="Save"
                android:textAllCaps="false"
                app:cornerRadius="8dp"
                app:iconTint="@null"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnPost"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/purple_700"
                android:stateListAnimator="@null"
                android:textColor="#FFFFFF"
                android:onClick="@{(view) -> PostAudioViewModel.postCoverToServer(view.getContext())}"
                android:text="Post"
                app:cornerRadius="8dp"
                android:textAllCaps="false"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>