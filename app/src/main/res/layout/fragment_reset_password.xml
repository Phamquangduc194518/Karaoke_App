<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <variable
            name="ViewModelLogin2"
            type="com.duc.karaoke_app.feature_auth.presentation.viewmodel.ViewModelLogin" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Logo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Trang Cập nhật Mật Khẩu"
                android:textColor="#163d68"
                android:textSize="30dp"
                android:textStyle="bold" />

            <!-- Tên ứng dụng -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="Vui lòng nhập địa chỉ email mà bạn đã sử dụng khi đăng ký tài khoản.\n
Nếu bạn quên email, vui lòng liên hệ với chúng tôi để được hỗ trợ."
                android:textColor="#001F54"
                android:textSize="20sp" />

            <!-- Email Input -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/custom_edit_text_login"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Email Icon"
                    android:src="@drawable/email"
                    app:tint="#808080" />

                <EditText
                    android:id="@+id/edt_forgot_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Nhập tài khoản email"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:text="@={ViewModelLogin2.email}"
                    android:textColor="#000000"
                    android:textColorHint="#808080" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="Check Icon"
                    android:src="@drawable/baseline_check_circle"
                    android:visibility="@{ViewModelLogin2.isValidEmail(ViewModelLogin2.email) ? View.VISIBLE : View.GONE}"
                    app:tint="#4CAF50" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/tvResetPasswordInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:text="Bạn sẽ nhận được email hướng dẫn đặt lại mật khẩu."
                android:textColor="#666666"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/custom_background_button_login"
                android:backgroundTint="#004AAD"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="12dp"
                android:text="Gửi"
                android:onClick="@{()->ViewModelLogin2.onForgotPasswordClick()}"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>